<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<!-- Bootstrap CSS -->
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
			integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
			crossorigin="anonymous"
		/>

		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"
		/>
		<link rel="stylesheet" href="/css/8puzzle.css" />
		<title>Dyce & Dyne | SlidingPuzzle</title>
		<link rel="icon" href="/images/logo.png" type="image/x-icon">
	</head>
	<body>
		<%- include('../partials/navbar.ejs') %>

		<!-- Button trigger modal -->
		<button
			type="button"
			class="btn btn-primary"
			data-toggle="modal"
			data-target="#exampleModalCenter"
			id="winbutton"
		>
			Launch demo modal
		</button>

		<!-- Modal -->
		<div
			class="modal fade"
			id="exampleModalCenter"
			tabindex="-1"
			role="dialog"
			aria-labelledby="exampleModalCenterTitle"
			aria-hidden="true"
		>
			<div class="modal-dialog modal-dialog-centered" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="modal-title">
							Wuhoooooooooo!
						</h5>

						<button
							type="button"
							class="close"
							data-dismiss="modal"
							aria-label="Close"
						>
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<img
							class="img-fluid"
							src="https://thumbs.gfycat.com/KindRipeBluejay-max-1mb.gif"
						/>
					</div>
					<div class="modal-footer">
						<button
							type="button"
							class="btn btn-secondary"
							data-dismiss="modal"
							onclick="addWalletPoints(1)"
						>
							Save Points
						</button>
						<button
							type="button"
							id="addWalletPoints"
							class="btn btn-primary"
							onclick="addWalletPoints(2)"
						>
							Redeem Now !
						</button>
					</div>
				</div>
			</div>
		</div>
		<div class="container-loading" id="container-loading">
			<div class="loader">
				<div class="loader--dot"></div>
				<div class="loader--dot"></div>
				<div class="loader--dot"></div>
				<div class="loader--dot"></div>
				<div class="loader--dot"></div>
				<div class="loader--dot"></div>
				<div class="loader--text"></div>
			</div>
		</div>

		<div class="game" id="game">
			<div class="container py-5 mx-auto my-auto align-items-center">
				<div class="row d-flex justify-content-center mx-auto">
					<div
						class="
							col-lg-6 col-md-6 col-sm-12
							mx-auto
							px-0
							justify-content-center
						"
					>
						<div
							class="mx-auto shadow"
							id="table"
							style="display: table"
						>
							<div id="row1" style="display: table-row">
								<div
									id="cell11"
									class="tile1"
									onClick="clickTile(1,1);"
								></div>
								<div
									id="cell12"
									class="tile2"
									onClick="clickTile(1,2);"
								></div>
								<div
									id="cell13"
									class="tile3"
									onClick="clickTile(1,3);"
								></div>
							</div>
							<div id="row2" style="display: table-row">
								<div
									id="cell21"
									class="tile4"
									onClick="clickTile(2,1);"
								></div>
								<div
									id="cell22"
									class="tile5"
									onClick="clickTile(2,2);"
								></div>
								<div
									id="cell23"
									class="tile6"
									onClick="clickTile(2,3);"
								></div>
							</div>
							<div id="row3" style="display: table-row">
								<div
									id="cell31"
									class="tile7"
									onClick="clickTile(3,1);"
								></div>
								<div
									id="cell32"
									class="tile8"
									onClick="clickTile(3,2);"
								></div>
								<div
									id="cell33"
									class="tile9"
									onClick="clickTile(3,3);"
								></div>
							</div>
						</div>
					</div>
					<div
						class="
							col-lg-6 col-md-6 col-sm-12
							d-flex
							justify-content-center
							align-content-center
							px-0
							my-0
						"
					>
						<img
							class="
								img-fluid
								shadow
								align-self-center
								justify-self-center
								align-content-center
							"
							src="/images/dessert.jpg"
							alt=""
						/>
					</div>
				</div>
			</div>
			<br />
			<div class="container mb-4">
				<div class="row justify-content-md-center mb-4">
					<div class="col col-lg-auto">
						<button class="gamebutton" onclick="getNewGame()">
							New Game
						</button>
					</div>
					<div class="col-md-auto">
						<button class="gamebutton" id="moves">Moves : 0</button>
					</div>
					<div class="col col-lg-auto">
						<!-- Button trigger modal -->
						<button
							type="button"
							class="btn btn-primary gamebutton"
							data-toggle="modal"
							data-target="#exampleModalLong"
						>
							How to Play
						</button>

						<!-- Modal -->
						<div
							class="modal fade"
							id="exampleModalLong"
							tabindex="-1"
							role="dialog"
							aria-labelledby="exampleModalLongTitle"
							aria-hidden="true"
						>
							<div class="modal-dialog" role="document">
								<div class="modal-content">
									<div class="modal-header">
										<h5
											class="modal-title"
											id="exampleModalLongTitle"
										>
											SlidingPuzzle
										</h5>
										<button
											type="button"
											class="close"
											data-dismiss="modal"
											aria-label="Close"
										>
											<span aria-hidden="true"
												>&times;</span
											>
										</button>
									</div>
									<div class="modal-body">
										Each game you complete awards you with
										some points calculated by comparing your
										performance with out AI.
									</div>
									<div class="modal-footer">
										<button
											type="button"
											class="btn btn-secondary"
											data-dismiss="modal"
										>
											Close
										</button>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- Button trigger modal -->
				</div>
			</div>
		</div>
	</body>
	<script>
		document.getElementById("winbutton").classList.add("displaynone");
	</script>
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

	<script src="/scripts/8puzzle-AI-Solver.js"></script>
	<script src="/scripts/8puzzle.js"></script>
	<script
		src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
		integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
		crossorigin="anonymous"
	></script>
	<script
		src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
		integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
		crossorigin="anonymous"
	></script>
	<script
		src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
		integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
		crossorigin="anonymous"
	></script>
</html>
